<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="30dp"
    tools:context="com.example.toshiba.cctvapp.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/eyelogoo"
        android:layout_marginTop="20dp"
        android:id="@+id/cctv_image"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/cctv_image"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:id="@+id/user_id"
        android:gravity="center_vertical"


        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/user"
            android:padding="30dp"
            android:layout_marginLeft="10dp"
            />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:textColorHighlight="#066ba1"
        android:textStyle="bold"
        android:textColor="#066ba1"
        android:textColorHint="#066ba1"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:background="@null"
        android:id="@+id/username_id"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/user_id"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:id="@+id/password_id"
        android:gravity="center_vertical"


        >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/key1"
        android:padding="30dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textStyle="bold"
        android:textColor="#066ba1"
        android:layout_marginLeft="10dp"
        android:textColorHint="#066ba1"
        android:paddingLeft="10dp"
        android:background="@null"
        android:id="@+id/pass_id"

        />
    </LinearLayout>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:background="@drawable/shape"
       android:layout_below="@id/password_id"
       android:layout_marginTop="20dp"
       android:textColor="#066ba1"
       android:text="LOGIN"
       android:onClick="Login"
       android:padding="10dp"
       android:textStyle="bold"
       android:textSize="16dp"
       />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
